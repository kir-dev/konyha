= form_for @appliance do |f|
  - if @appliance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@appliance.errors.count, "error")} prohibited this appliance from being saved:"
      %ul
        - @appliance.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :category
    = f.number_field :category
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :kitchen
    = f.text_field :kitchen
  .actions
    = f.submit 'Save'
