= form_with url: fire_transition_url do |f|
  .mt-4.bg-white.rounded-lg.p-3.md:p-8.shadow-lg.hover:shadow-2xl.transition-all.duration-150
    %h3.text-xl.font-bold Esemény rögzítése

    - if appliance.errors.any?
      = render 'layouts/errors', errors: appliance.errors
    .relative
      = f.select :transition, appliance.valid_actions.map{|a| [t(a) , a]},{},class: "block shadow bg-white appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
      .pointer-events-none.absolute.inset-y-0.right-0.flex.items-center.px-2.text-gray-700
        %svg.fill-current.h-4.w-4{:viewbox => "0 0 20 20", :xmlns => "http://www.w3.org/2000/svg"}
          %path{:d => "M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"}
    .grid.grid-cols-4
      .col-span-4.md:col-span-3

      .col-span-4.md:col-span-1
        .mt-1
          = f.hidden_field(:appliance_id ,value: appliance.id)
        .mt-2.text-right
          = f.submit 'Frissítés', class: "bg-green-600 hover:bg-green-500 text-white font-bold py-2 px-4 rounded col-span-1"